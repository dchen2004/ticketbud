<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Show details of shortlink <%= @short_link.id %></h4>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
        <tr>
          <th>ShortLink:</th>
          <td><%= forward_url(slug: @short_link.slug) %></td>
        </tr>
        <tr>
          <th>Detination URL:</th>
          <td><%= @short_link.destination_url %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to 'Go to Listing', root_path %>
</div>
