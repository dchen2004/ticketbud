<div class="row justify-content-center">
  <%= form_for @short_link do |f| %>
    <div class="form-group">
      <%= f.label :slug %>
      <%= f.text_field :slug, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :destination_url %>
      <%= f.url_field :destination_url, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'form-control btn-primary' %>
    </div>
  <% end %>
</div>
<%= link_to 'Go to Listing', root_path %>